{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++.exe Build Arquivo Selecionado",
      "command": "C:/Desenvolvimento/msys64/mingw64/bin/g++.exe",
      "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "C:/Desenvolvimento/msys64/mingw64/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "C++20: Build Arquivo Selecionado",
      "command": "C:/Desenvolvimento/msys64/mingw64/bin/g++.exe",
      "args": ["-g", "-std=c++2a", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "C:/Desenvolvimento/msys64/mingw64/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "C++20 Coroutines: Build Arquivo Selecionado",
      "command": "C:/Desenvolvimento/msys64/mingw64/bin/g++.exe",
      "args": ["-g", "-std=c++2a", "-fcoroutines", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
      "options": {
        "cwd": "C:/Desenvolvimento/msys64/mingw64/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "C/C++: g++.exe Build OpenGL,GLFW,GLEW Arquivo Selecionado",
      "command": "C:/Desenvolvimento/msys64/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lopengl32",
        "-lgdi32",
        "-luser32",
        "-lkernel32",
        "-lglu32",
        /* "-lglfw3dll", */
        "-lglfw3",
        "-lglew32"
      ],
      "options": {
        "cwd": "C:/Desenvolvimento/msys64/mingw64/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "C/C++ 20: g++.exe Build OpenCV, Tesseract Arquivo Selecionado",
      "command": "C:/Desenvolvimento/msys64/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "-std=c++2a",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lopencv_core",
        "-lopencv_imgcodecs",
        "-lopencv_imgproc",
        "-lopencv_highgui",
        "-lopencv_videoio",
        "-lopencv_video",
        "-lopencv_objdetect",
        "-ltesseract"
      ],
      "options": {
        "cwd": "C:/Desenvolvimento/msys64/mingw64/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
